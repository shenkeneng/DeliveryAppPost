<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/view_title_red" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/frxs_gray_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/shop_sign_sucess"
            android:textSize="18sp"
            android:layout_marginBottom="40dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_red_rectangle"
            android:gravity="center"
            android:padding="10dp"
            android:text="确认"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/tv_look_sign"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_gray_rectangle"
            android:gravity="center"
            android:padding="10dp"
            android:text="查看签名详情"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>