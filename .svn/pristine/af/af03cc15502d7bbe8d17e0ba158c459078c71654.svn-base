<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ActionBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/frxs_red">

        <include layout="@layout/view_title_red" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/train_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="车次："
            android:textSize="@dimen/larger_font"
            android:padding="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/divider_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/total_point_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="绩效分："
                android:textSize="@dimen/larger_font"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"/>

            <TextView
                android:id="@+id/ext_point_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="附加绩效分："
                android:textSize="@dimen/larger_font"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/shop_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="门店数："
            android:textSize="@dimen/larger_font"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/max_distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最远公里数："
            android:textSize="@dimen/larger_font"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"/>

      <!--  <TextView
            android:id="@+id/order_num_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="订单数："
            android:textSize="@dimen/larger_font"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"/>-->

      <!--  <TextView
            android:id="@+id/order_amount_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="订单金额："
            android:textSize="@dimen/larger_font"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"/>-->

        <TextView
            android:id="@+id/available_amount_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="可配送金额："
            android:textSize="@dimen/larger_font"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/larger_font"
            android:textColor="@color/frxs_red"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/divider_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/finish_btn"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:background="@drawable/selector_red_corner_rect"
                android:textColor="@color/frxs_red"
                android:text="@string/finish_loading"/>

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/selector_gray_corner_rect"
                android:layout_margin="15dp"
                android:text="@string/cancel"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>